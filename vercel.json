{
  "version": 2,
  "builds": [
    {
      "src": "server/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["../prisma/**"]
      }
    },
    {
      "src": "client/next.config.js",
      "use": "@vercel/next"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/src/main.ts"
    }
  ]
}